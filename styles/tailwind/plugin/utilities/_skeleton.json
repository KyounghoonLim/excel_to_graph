{
  ".skeleton": {
    "width": "100%",
    "position": "relative",
    "borderRadius": "20px",
    "overflow": "hidden",
    "@apply bg-neutral-200": true,
    "@apply no-auto-size": true,
    "&::after": {
      "width": "100%",
      "height": "100%",
      "content": "''",
      "position": "absolute",
      "top": 0,
      "left": 0,
      "transform": "translateX(-100%)",
      "background": "linear-gradient(90deg, transparent 0, #ffffff33 20%, #ffffff80 80%, transparent)",
      "will-change": "transform",
      "@apply animate-shimmer": true
    }
  }
}
