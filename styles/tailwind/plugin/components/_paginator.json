{
  ".paginator": {
    "width": "100%",
    "height": "auto",
    "@apply flex-col-start": true
  },
  ".paginator-indicator": {
    "width": "auto",
    "height": "72px",
    "position": "relative",
    "gap": "16px",
    "@apply flex-row-center": true,
    " .paginator-indicator-item": {
      "width": "24px",
      "textAlign": "center",
      "cursor": "pointer",
      "@apply typograph-16": true,
      "@apply text-neutral-900": true,
      "&:hover": {
        "@apply text-neutral-700": true
      },
      "&[data-selected='true']": {
        "fontWeight": "bold"
      }
    },
    " .paginator-indicator-arrow": {
      "cursor": "pointer",
      "@apply fill-neutral-900": true,
      "&:hover": {
        "@apply fill-neutral-700": true
      }
    }
  }
}
