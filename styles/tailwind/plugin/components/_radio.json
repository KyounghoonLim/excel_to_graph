{
  ".radio": {
    "width": "100%",
    "display": "flex",
    "flexWrap": "no-wrap",
    "justifyContent": "space-between",
    "alignItems": "center",
    "position": "relative",
    "overflow": "hidden"
  },
  ".radio-item": {
    "width": "50px",
    "height": "50px",
    "borderRadius": "50%",
    "cursor": "pointer",
    "flexShrink": "0",
    "@apply bg-bg-light": true,
    "@apply typograph-16": true,
    "@apply text-neutral-900": true,
    "@apply flex-row-center": true,
    "@apply truncate": true,
    "&:hover": {
      "@apply bg-neutral-100": true
    },
    "&:disabled": {
      "cursor": "not-allowed !important",
      "pointerEvents": "none"
    },
    "&.radio-selected": {
      "fontWeight": "700",
      "@apply text-neutral-000": true,
      "@apply bg-button-primary-default": true
    }
  },
  ".radio-slide": {
    "width": "100%",
    "height": "50px",
    "borderRadius": "16px",
    "display": "flex",
    "flexWrap": "no-wrap",
    "justifyContent": "start",
    "alignItems": "center",
    "position": "relative",
    "@apply bg-neutral-200": true,
    "& .radio-item": {
      "height": "100%",
      "cursor": "pointer",
      "padding": "0 8px",
      "borderRadius": "16px",
      "backgroundColor": "transparent",
      "@apply typograph-16": true,
      "@apply text-text-placeholder-000": true,
      "@apply flex-row-center": true,
      "@apply truncate": true,
      "&:hover": {
        "@apply text-text-label-100": true
      },
      "&:disabled": {
        "cursor": "not-allowed !important",
        "pointerEvents": "none",
        "@apply !bg-white": true,
        "@apply !text-text-label-100": true
      }
    },
    "& .radio-indicator": {
      "height": "100%",
      "borderRadius": "16px",
      "padding": "0 8px",
      "position": "absolute",
      "top": "0",
      "left": "0",
      "transition": "transform 0.3s ease-in-out",
      "@apply typograph-16": true,
      "@apply bg-neutral-000": true,
      "@apply text-neutral-900": true,
      "@apply flex-row-center": true,
      "@apply truncate": true
    }
  }
}
